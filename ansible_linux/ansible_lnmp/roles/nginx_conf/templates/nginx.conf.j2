#{{ ansible_managed }}
user              www;

worker_processes  {{ ansible_processor_cores }};
pid        /var/run/nginx/nginx.pid;
worker_rlimit_nofile 102400;

{% if  ansible_processor_cores  == '16' %}
worker_cpu_affinity 0000000000000001 0000000000000010 0000000000000100 0000000000001000 0000000000010000 0000000000100000 0000000001000000 0000000010000000 0000000100000000 0000001000000000 0000010000000000 0000100000000000 0001000000000000 0010000000000000 0100000000000000 1000000000000000;
{% elif  ansible_processor_cores  == '32' %}
worker_cpu_affinity 00000000000000000000000000000001 00000000000000000000000000000010 00000000000000000000000000000100 00000000000000000000000000001000 00000000000000000000000000010000 00000000000000000000000000100000 00000000000000000000000001000000 00000000000000000000000010000000 00000000000000000000000100000000 00000000000000000000001000000000 00000000000000000000010000000000 00000000000000000000100000000000 00000000000000000001000000000000 00000000000000000010000000000000 00000000000000000100000000000000 00000000000000001000000000000000 00000000000000010000000000000000 00000000000000100000000000000000 00000000000001000000000000000000 00000000000010000000000000000000 00000000000100000000000000000000 00000000001000000000000000000000 00000000010000000000000000000000 00000000100000000000000000000000 00000001000000000000000000000000 00000010000000000000000000000000 00000100000000000000000000000000 00001000000000000000000000000000 00010000000000000000000000000000 00100000000000000000000000000000 01000000000000000000000000000000 10000000000000000000000000000000;

{% elif ansible_processor_cores == '8' %}
worker_cpu_affinity 00000001 00000010 00000100 00001000 00010000 00100000 01000000 10000000; 

{% else %}

{% endif %}



events {
    use epoll;
    worker_connections  {{ nginx_max_clients }};
}


http {

        include mime.types;
        default_type application/octet-stream;
{% for k,v in nginx_http_params.iteritems() %}
       {{ k }}  {{ v }};
{% endfor %}

        gzip_buffers     4 8k;
        gzip_http_version 1.1;
        gzip_types       text/plain application/x-javascript text/css  application/xml;
        gzip_comp_level 5;

	log_format news '$remote_addr - $remote_user [$time_local] $request "$status" $body_bytes_sent "$http_referer" "$http_user_agent" "$http_x_forwarded_for"';
        access_log off;

        include /usr/local/nginx/conf/vhosts/*.conf;
}
